<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="FurnitureApp.Styles.Colors"
                    xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Colors -->
    <Color x:Key="PrimaryColor">#403B58</Color>
    <Color x:Key="SecondaryColor">#FFFFFF</Color>

    <Color x:Key="BackgroundColor">#F5F5F5</Color>
    <Color x:Key="PlaceholderColor">#A19FAF</Color>
    <Color x:Key="LightButtonBackgoundColor">#FA543B</Color>
    <Color x:Key="ImageBackgroundColor">#F2EEED</Color>
    <Color x:Key="RatingIconColor">#FAAC51</Color>

    <!-- Gradients -->
    <LinearGradientBrush x:Key="MainGradient" StartPoint="0.2,0.2" EndPoint="1,1">
        <GradientStop Offset="0.1" Color="#F5F5F5" />
        <GradientStop Offset="0.4" Color="#E3E2E5" />
    </LinearGradientBrush>

</ResourceDictionary>